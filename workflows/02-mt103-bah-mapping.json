{
    "id": "02-mt103-bah-mapper",
    "name": "MT103 Business Application Header Mapping for CBPR+",
    "description": "Maps MT103 message to ISO 20022 Business Application Header (AppHdr) using head.001.001.02 schema",
    "condition": {
        "and": [
            {"==": [{"var": "SwiftMT.message_type"}, "103"]},
            {"==": [{"var": "progress.workflow_id"}, "01-parser"]},
            {"==": [{"var": "progress.task_id"}, "parse_mt_message"]},
            {"==": [{"var": "progress.status_code"}, 200]}
        ]
    },
    "tasks": [
        {
            "id": "extract_32A_components",
            "name": "Extract Date, Currency and Amount from 32A field",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.parsed_32A.date",
                            "logic": {
                                "if": [
                                    { "var": "data.SwiftMT.32A" },
                                    { "substr": [{ "var": "data.SwiftMT.32A" }, 0, 6] },
                                    "240101"
                                ]
                            }
                        },
                        {
                            "path": "data.parsed_32A.currency",
                            "logic": {
                                "if": [
                                    { "var": "data.SwiftMT.32A" },
                                    { "substr": [{ "var": "data.SwiftMT.32A" }, 6, 3] },
                                    "USD"
                                ]
                            }
                        },
                        {
                            "path": "data.parsed_32A.amount",
                            "logic": {
                                "if": [
                                    { "var": "data.SwiftMT.32A" },
                                    { "substr": [{ "var": "data.SwiftMT.32A" }, 9] },
                                    "0.00"
                                ]
                            }
                        },
                        {
                            "path": "data.parsed_32A.formatted_date",
                            "logic": {
                                "if": [
                                    { "var": "data.parsed_32A.date" },
                                    {
                                        "cat": [
                                            "20",
                                            { "substr": [{ "var": "data.parsed_32A.date" }, 0, 2] },
                                            "-",
                                            { "substr": [{ "var": "data.parsed_32A.date" }, 2, 2] },
                                            "-",
                                            { "substr": [{ "var": "data.parsed_32A.date" }, 4, 2] }
                                        ]
                                    },
                                    "2024-01-01"
                                ]
                            }
                        },
                        {
                            "path": "data.parsed_32A.amount_with_dot",
                            "logic": {
                                "if": [
                                    { "var": "data.parsed_32A.amount" },
                                    {
                                        "if": [
                                            { "in": [",", { "var": "data.parsed_32A.amount" }] },
                                            {
                                                "cat": [
                                                    { "substr": [{ "var": "data.parsed_32A.amount" }, 0, -3] },
                                                    ".",
                                                    { "substr": [{ "var": "data.parsed_32A.amount" }, -2] }
                                                ]
                                            },
                                            { "var": "data.parsed_32A.amount" }
                                        ]
                                    },
                                    "0.00"
                                ]
                            }
                        },
                        {
                            "path": "data.parsed_32A.numeric_amount",
                            "logic": {
                                "if": [
                                    { "var": "data.parsed_32A.amount_with_dot" },
                                    {
                                        "+": [
                                            0,
                                            { "var": "data.parsed_32A.amount_with_dot" }
                                        ]
                                    },
                                    0.0
                                ]
                            }
                        }
                    ]
                }
            }
        },
        {
            "id": "map_cbpr_plus_business_application_header",
            "name": "Map CBPR+ Business Application Header (AppHdr)",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.MXheader.Fr.FIId.FinInstnId.BICFI",
                            "logic": { "var": "data.SwiftMT.52A" }
                        },
                        {
                            "path": "data.MXheader.To.FIId.FinInstnId.BICFI",
                            "logic": { "var": "data.SwiftMT.57A" }
                        },
                        {
                            "path": "data.MXheader.BizMsgIdr",
                            "logic": {
                                "cat": [
                                    { "var": "data.SwiftMT.20" },
                                    "-pacs.008-001"
                                ]
                            }
                        },
                        {
                            "path": "data.MXheader.MsgDefIdr",
                            "logic": "pacs.008.001.08"
                        },
                        {
                            "path": "data.MXheader.BizSvc",
                            "logic": "swift.cbprplus.02"
                        },
                        {
                            "path": "data.MXheader.CreDt",
                            "logic": {
                                "if": [
                                    { "var": "data.parsed_32A.formatted_date" },
                                    {
                                        "cat": [
                                            { "var": "data.parsed_32A.formatted_date" },
                                            "T00:00:00+00:00"
                                        ]
                                    },
                                    "2024-01-01T00:00:00+00:00"
                                ]
                            }
                        },
                        {
                            "path": "data.MXheader.CpyDplct",
                            "logic": "CODU"
                        },
                        {
                            "path": "data.MXheader.PssblDplct",
                            "logic": false
                        },
                        {
                            "path": "data.MXheader.Prty",
                            "logic": {
                                "if": [
                                    { "==": [{ "var": "data.SwiftMT.23B" }, "URGP"] },
                                    "URGT",
                                    "NORM"
                                                                ]
                            }
                        }
                    ]
                }
            }
        },
        {
            "id": "map_cbpr_plus_message_metadata",
            "name": "Map CBPR+ Message Metadata",
            "function": {
                "name": "map",
                "input": {
                    "mappings": [
                        {
                            "path": "data.MXheader.Rltd.Fr.FIId.FinInstnId.BICFI",
                            "logic": { "var": "data.SwiftMT.52A" }
                        },
                        {
                            "path": "data.MXheader.Rltd.To.FIId.FinInstnId.BICFI",
                            "logic": { "var": "data.SwiftMT.57A" }
                        },
                        {
                            "path": "data.MXheader.Rltd.MsgDefIdr",
                            "logic": "pacs.008.001.08"
                        },
                        {
                            "path": "data.MXheader.Rltd.BizMsgIdr",
                            "logic": { "var": "data.SwiftMT.20" }
                        },
                        {
                            "path": "data.MXheader.Rltd.CreDt",
                            "logic": {
                                "if": [
                                    { "var": "data.parsed_32A.formatted_date" },
                                    {
                                        "cat": [
                                            { "var": "data.parsed_32A.formatted_date" },
                                            "T00:00:00+00:00"
                                        ]
                                    },
                                    "2024-01-01T00:00:00+00:00"
                                ]
                            }
                        }
                    ]
                }
            }
        },
        {
            "id": "publish_header_xml",
            "name": "Publish Header XML",
            "function": {
                "name": "publish",
                "input": {
                    "input_field_name": "MXheader",
                    "output_field_name": "header",
                    "source_format": "MT103.Header"
                }
            }
        }
    ]
} 